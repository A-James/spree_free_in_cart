<% @body_id = 'cart' %>

<h1><%= Spree.t(:shopping_cart) %></h1>

<% if @order.line_items.empty? %>

  <div data-hook="empty_cart">
    <div class="alert alert-info"><%= Spree.t(:your_cart_is_empty) %></div>
    <p><%= link_to Spree.t(:continue_shopping), products_path, :class => 'btn btn-default' %></p>
  </div>

<% else %>

  <div class="row">

    <div data-hook="outside_cart_form">
      <%= form_for @order, :url => update_cart_path, :html => {:id => 'update-cart'} do |order_form| %>
        <div data-hook="inside_cart_form">

          <div data-hook="cart_items">
            <%= render :partial => 'form', :locals => { :order_form => order_form } %>
          </div>

          <div id="subtotal" data-hook class="well col-md-12 text-right">
            <%= Spree.t(:subtotal) %>: <span class="lead text-primary order-total"><%= @order.display_total.to_html %> 
            <% if current_order.item_count != 1 %>(<%= Spree.t(:just) %> <%= (@order.total / @current_order.line_items.sum(&:quantity)).round(2) %> <%= Spree.t(:each) %>!)<% end %></span>
          </div>

          <div class="links col-md-6 navbar-form pull-right text-right" data-hook="cart_buttons">
            <div class="form-group">
            <%= order_form.text_field :coupon_code, :size => 10, :placeholder => Spree.t(:coupon_code), class: "form-control form-control-inline" %></div>
            <%= button_tag :class => 'btn btn-primary', :id => 'update-button' do %>
              <%= Spree.t(:update) %>
            <% end %>
            <%= button_tag :class => 'btn btn-lg btn-success', :id => 'checkout-link', :name => 'checkout' do %>
              <%= Spree.t(:checkout) %>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>

    <div id="empty-cart" class="col-md-6 pull-left" data-hook>
      <%= form_tag empty_cart_path, :method => :put do %>
        <p id="clear_cart_link" data-hook>
          <%= submit_tag Spree.t(:empty_cart), :class => 'btn btn-default' %>
          <%= Spree.t(:or) %>
          <%= link_to Spree.t(:continue_shopping), products_path, :class => 'continue' %>
        </p>
      <% end %>
    </div>

  </div>

  <br/>

  <div class="row">
    <div class="col-md-4">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title">
            100% Secure
          </h3>
        </div>
        <div class="panel-body text-center">
          <p><%= image_tag("cards.png", class: "img-responsive") %></p>
          <p><span class="label label-info">256 bit SSL encrypted.</span><p> 
          <p>Your card details are safe.</p>
        </div>
      </div>
    </div>

    <div class="col-md-4">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title">
            Fast, Safe shipping
          </h3>
        </div>
        <div class="panel-body text-center">
          <p>FREE worldwide delivery!</p>
          <p>Packaged with exceptional care</p>
          <p>Ordering within [country]? We'll upgrade you to express delivery for FREE</p>
        </div>
      </div>
    </div>

      <div class="col-md-4">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title">
            Limited offer
          </h3>
        </div>
        <div class="panel-body text-center">
          <h3>Buy 2, get 1 free!</h3> 
          <p>Expires on <%= 2.days.from_now.strftime("%d %b %Y")  %> (Just 2 days left!)</p>
        </div>
      </div>
    </div>
  </div>


<% end %>
